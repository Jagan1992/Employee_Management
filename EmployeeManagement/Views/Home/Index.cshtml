@model EmployeeManagement.Models.EmployeeModel
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/lib")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div id="alert" class="alert_spacing">
        <label id="lblMsg"></label>
    </div>
    <div class="container spacing" align="center">
        <div class="card border-secondary">
            <div class="card-header">
                <b>
                    Add Employee
                </b>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("SaveEmployee", "Home"))
                {
                    @Html.HiddenFor(m => m.EmployeeId, new { @id = "hdnEmployeeId" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmployeeName, "Name")
                        @Html.TextBoxFor(m => m.EmployeeName, new { @class = "col-sm-3 form-control", @id = "txtEmployeeName" })
                        @Html.ValidationMessageFor(m => m.EmployeeName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Age, "Age")
                        @Html.TextBoxFor(m => m.Age, new { @class = "col-sm-3 form-control", @id = "txtAge" })
                        @Html.ValidationMessageFor(m => m.Age)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, "Phone Number")
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "col-sm-3 form-control", @id = "txtPhoneNumber" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address, "Address")
                        @Html.TextAreaFor(m => m.Address, new { @class = "col-sm-3 form-control", @id = "txtAddress" })
                        @Html.ValidationMessageFor(m => m.Address)
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                }
            </div>
            <div>
                <table class="ui celled table" id="tblEmployeeDetails" style="width:100%;">
                    <thead>
                        <tr>
                            <th>EmployeeId</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Address</th>
                            <th>Phone No</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
    <!--modal-->
    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm</h5>
                    <button type="button" id="btnClose" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you Sure Want to delete this Movie?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnOk">Ok</button>
                    <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Page_Scripts/Employee.js"></script>




